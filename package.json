{
  "name": "basic-site",
  "version": "2.0.0",
  "description": "Simple Basic Site Template",
  "main": "app/index.html",
  "scripts": {
    "sync": "browser-sync start -s \"app\" -f \"app/**/*.*\"",
    "sass": "node-sass -w --include-path='src/scss' --source-map=true app/scss/styles.scss app/css/styles.css",
    "start": "npm-run-all -p sync sass",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/csamp516/basic-site.git"
  },
  "author": "Chris Samperisi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/csamp516/basic-site/issues"
  },
  "homepage": "https://github.com/csamp516/basic-site#readme",
  "devDependencies": {
    "browser-sync": "^2.24.7",
    "npm-run-all": "^4.1.3",
    "node-sass": "^7.0.3"
  }
}